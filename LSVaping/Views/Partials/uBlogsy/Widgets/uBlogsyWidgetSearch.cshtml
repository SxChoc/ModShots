@*
    Renders a search field.
*@

@using uBlogsy.BusinessLogic;
@inherits UmbracoTemplatePage
<script type="text/javascript">
    $(document).ready(function(){
        $('#btn-search-category-blog').click(function () {
            @{var landing = DataService.Instance.GetLanding(Model.Content); }
            window.location.href = "@landing.Url()" + '?search=' + $("#uBlogsyTxtSearch").val();
            return false;
        });
        $('#uBlogsyTxtSearch').keyup(function (e) {
            if(e.which == 13) {$('#uBlogsyBtnSearch').trigger('click');}
        });
    });
</script>
@*<div class="uBlogsy_search">*@
    @*<input id="uBlogsyTxtSearch" type="text" placeholder="@Umbraco.GetDictionaryValue("uBlogsyDicSearch")" />*@
    @*<input id="uBlogsyBtnSearch" type="submit" value="@Umbraco.GetDictionaryValue("uBlogsyDicSearchSubmit")" />*@
@*</div>*@

<form class="header-search-box-blog" action="#" method="post">
    <input id="uBlogsyTxtSearch" type="search" placeholder="@Umbraco.GetDictionaryValue("uBlogsyDicSearch")" name="search" />
    @*<input type="search" placeholder="Search here..." id="text- search" name="search">*@
    <button id="btn-search-category-blog" type="submit">
        <i class="fa fa-search"></i>
    </button>
</form>


